quadratic: theory
begin

  sq(x: real): real = x*x

  % Discriminant
  
  discr(a: nzreal, b,c: real) : real = sq(b) - 4*a*c

  discr_symm : lemma
   âˆ€(a: nzreal, b, c: real): discr(a,b,c) = discr(-a,-b,-c)

  %
