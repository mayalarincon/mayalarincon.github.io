  a      : VAR nonzero_real
  b,c    : var real
  k      : VAR nzreal

  discr_scalar : LEMMA
    discr(k*a,k*b,k*c) = sq(k)*discr(a,b,c)

  x      : VAR real
  
  canonical_sq : LEMMA
    a*sq(x) + b*x + c  = 
    a*sq(x + b/(2*a)) + (4*a*c - sq(b))/(4*a)

end quadratic
